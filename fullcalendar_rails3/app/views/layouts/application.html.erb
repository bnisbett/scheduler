<!DOCTYPE html>
<html>
<head>
  <title>The Score On Call Scheduler</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag "jquery","jquery-ui","fullcalendar","jquery.validate.min","fullcalendar.min","gcal","jquery.rails","application" %>
  <%= csrf_meta_tag %>
</head>
<body class = <%= "#{controller_name.dasherize}" %> id= <%="#{action_name.dasherize}" %> >
	<div id="user-nav">
		<%= link_to 'Home', events_path %> |
	  <% if current_user %>
			<%= link_to "Supporters", supporters_path%> |
		  <%= link_to "Edit Profile", edit_user_path(:current) %> |
		  <%= link_to "Logout", logout_path %> |<%= current_user.login %>
		<% else %>
		  <%= link_to "Login", login_path %>
		<% end %>
	</div>

<%= yield %>

</body>
</html>
