<h1>On Call This Week</h1>
<hr/>
<div id="agenda">
<table >
<th>Start Date</th>
<th>End Date</th>
<th>Supporter</th>
<% @events.each do |event| %>
		
	<tr>
	<% if event.all_day %>
		<td><%= event.startDate.strftime("%a, %d %b %Y") %> - All Day</td>
		<td><%= event.endDate.strftime("%a, %d %b %Y") %> - All Day</td>
	<% else %>
	  <td><%= event.startDate.strftime("%a, %d %b %Y") %> at <%= event.startTime.strftime("%I:%M%p") %></td>
		<td><%= event.endDate.strftime("%a, %d %b %Y") %> at <%= event.endTime.strftime("%I:%M%p") %></td>
	<% end %>
    <td><%=h event.supporter.name %> (<%=event.supporter.role%>)</td>
  </tr>
<% end %>
</table>
</div>
